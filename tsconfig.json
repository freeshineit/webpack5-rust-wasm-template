{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "sourceMap": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "target": "es5",
        "allowJs": true,
        "strictNullChecks": true,
        "typeRoots": [
            "node_modules/@types",
            "@typings",
            "rust/pkg"
        ],
        "lib": ["DOM", "ESNext"]
    },
    "exclude": ["node_modules", "rust/pkg", "rust/target"]
 }